{
    "name": "robex99/integrations-showcase",
    "description": "Clean Architecture implementation of payment gateway integrations",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PaymentIntegrations\\Domain\\": "src/Domain/",
            "PaymentIntegrations\\Application\\": "src/Application/",
            "PaymentIntegrations\\Infrastructure\\": "src/Infrastructure/",
            "PaymentIntegrations\\Presentation\\": "src/Presentation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest --testsuite=Unit",
        "test:integration": "pest --testsuite=Integration",
        "test:coverage": "pest --coverage --min=90",
        "analyse": "phpstan analyse src tests --level=9",
        "format": "php-cs-fixer fix src",
        "format:check": "php-cs-fixer fix src --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}